{
  "manifest_version": 3,
  "name": "BLS Automation Control Panel",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*.blsspainmorocco.net/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ui/*"],
      "matches": ["https://*.blsspainmorocco.net/*"]
    }
  ]
}
